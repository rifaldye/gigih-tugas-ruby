<h1> Items </h1>
<table>
  <thead>
    <tr>
        <td><b>Name</b></td>
        <td><b>Price</b></td>
        <td> </td>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.price %></td>
        <td>
            <a href="/items/show?id=<%= item.id %>">Show</a>
            <a href="/items/edit?id=<%= item.id %>">Update</a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<a href="/items/new">New Item</a>